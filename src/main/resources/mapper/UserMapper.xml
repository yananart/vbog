<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.yananart.blog.repository.mapper.UserMapper">

    <select id="queryById" resultType="cn.yananart.blog.domain.pojo.User">
        select *
        from tb_user
        where uid = #{id}
    </select>

    <select id="queryByUsername" resultType="cn.yananart.blog.domain.pojo.User">
        select *
        from tb_user
        where username = #{username}
    </select>
</mapper>